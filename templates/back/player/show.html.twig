{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ player.firstName }}</td>
            </tr>
            <tr>
                <th>NickName</th>
                <td>{{ player.nickName }}</td>
            </tr>
            <tr>
                <th>JerseyNumber</th>
                <td>{{ player.jerseyNumber }}</td>
            </tr>
            <tr>
                <th>StickSide</th>
                <td>{{ player.stickSide }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ player.picture }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ player.createdAt ? player.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ player.updatedAt ? player.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ player.role }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_player_index') }}">back to list</a>

    <a href="{{ path('app_back_player_edit', {'id': player.id}) }}">edit</a>

    {{ include('back/player/_delete_form.html.twig') }}
{% endblock %}
