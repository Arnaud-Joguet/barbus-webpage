{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="back-office">
        <h1>Post index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>FirstPicture</th>
                    <th>Picture</th>
                    <th>Summary</th>
                    <th>Description</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>Title</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.firstPicture }}</td>
                    <td>{{ post.picture }}</td>
                    <td>{{ post.summary }}</td>
                    <td>{{ post.description }}</td>
                    <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ post.title }}</td>
                    <td>
                        <a href="{{ path('app_back_post_show', {'id': post.id}) }}">show</a>
                        <a href="{{ path('app_back_post_edit', {'id': post.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_back_post_new') }}">Create new</a>
    </div>
{% endblock %}
