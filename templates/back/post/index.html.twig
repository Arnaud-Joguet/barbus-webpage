{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="back-office">
        <h1>Gestion du blog</h1>

        <a href="{{ path('app_back_post_new') }}" class="btn btn-success">Nouveau</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Résumé</th>
                    <th>Description</th>
                    <th>Image à la une</th>
                    <th>Image</th>
                    <th colspan="2" scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.summary }}</td>
                    <td>{{ post.description }}</td>
                    <td>{{ post.firstPicture }}</td>
                    <td>{{ post.picture }}</td>
                    <td>
                        <a href="{{ path('app_back_post_show', {'id': post.id}) }}" class="btn btn-warning">Voir</a>
                    </td>
                    <td>
                        <a href="{{ path('app_back_post_edit', {'id': post.id}) }}" class="btn btn-warning">modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
